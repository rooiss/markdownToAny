<body>
    <div class="container">
        <h1>Markdown to PDF converter</h1>
        <form action="/download" method="POST">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Write your shit here</span>
                </div>
                <textarea name="MD" class="form-control" aria-label="With textarea"></textarea>
            </div>
            <select name='formatSelect' id="formatSelect">
                <option value="">Choose the file type</option>
                <option name='DOC' value="DOC">DOC</option>
                <option name='PDF' value="PDF">PDF</option>
                <option name='HTML' value="HTML">HTML</option>
            </select>                
            <input type="submit" value='Convert' class="btn btn-info">
        </form>
    </div>
</body>
